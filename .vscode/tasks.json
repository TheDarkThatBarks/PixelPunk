{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build project",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceRoot}\\main.cpp",
                "${workspaceRoot}\\utilities.cpp",
                "${workspaceRoot}\\animations.cpp",
                "-lwinmm",
                "-std=gnu++11",
                "-o",
                "${workspaceRoot}\\main.exe"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}