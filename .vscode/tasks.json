{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build project",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-g",
                "${workspaceRoot}\\main.o",
                "${workspaceRoot}\\utilities.o",
                "${workspaceRoot}\\animations.o",
                "-lwinmm",
                //"-std=gnu++11",
                "-o",
                "${workspaceRoot}\\main.exe"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "main",
                "utilities",
                "animations"
            ]
        },
        {
            "type": "cppbuild",
            "label": "main",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
